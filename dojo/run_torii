#!/bin/bash
set -e

torii --version

export WORLD_ADDRESS=$(toml get Scarb.toml --raw tool.dojo.env.world_address)
echo "@WORLD: $WORLD_ADDRESS"

if [[
  "$WORLD_ADDRESS" != "0x"*
]]; then
  echo "! Missing data ðŸ‘Ž"
  exit 1
fi

torii \
  --allowed-origins "*" --index-pending \
  --world $WORLD_ADDRESS $*
